/* pages/profile/enterprise-bind/enterprise-bind.wxss */

.container {
  padding: 20rpx;
}

.form-item {
  margin-bottom: 32rpx;
}

.label {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 16rpx;
  display: block;
}

.input {
  width: 100%;
  height: 80rpx;
  background: #f5f5f5;
  border-radius: 8rpx;
  padding: 0 24rpx;
  font-size: 28rpx;
}

.picker {
  width: 100%;
  height: 80rpx;
  background: #f5f5f5;
  border-radius: 8rpx;
  padding: 0 24rpx;
  display: flex;
  align-items: center;
  box-sizing: border-box;
}

.picker-text {
  font-size: 28rpx;
  color: #333;
}

.suggestions {
  margin-top: 20rpx;
  background: #f5f5f5;
  border-radius: 8rpx;
  overflow: hidden;
}

.suggestion-item {
  padding: 24rpx;
  border-bottom: 1rpx solid #e0e0e0;
  font-size: 28rpx;
  color: #333;
}

.suggestion-item:last-child {
  border-bottom: none;
}

.hint {
  margin-top: 32rpx;
  padding: 20rpx;
  background: #fff0f5;
  border-radius: 8rpx;
}

.hint text {
  font-size: 24rpx;
  color: #666;
  line-height: 1.6;
}

.submit-btn {
  width: 100%;
  margin-top: 40rpx;
  background: #3cc51f;
  color: #fff;
  border: none;
  border-radius: 8rpx;
  padding: 24rpx;
  font-size: 32rpx;
}
