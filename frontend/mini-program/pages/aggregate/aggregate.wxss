/* pages/aggregate/aggregate.wxss */

.nav-wrap {
  height: 100vh;
  display: flex;
  flex-direction: column;
}

.nav-l1 {
  white-space: nowrap;
  background: #fff;
  border-bottom: 1rpx solid rgba(0,0,0,.06);
  padding: 16rpx 20rpx;
}

.nav-l1-item {
  display: inline-block;
  padding: 14rpx 22rpx;
  margin-right: 12rpx;
  border-radius: 999rpx;
  background: #f5f5f5;
  color: #333;
  font-size: 28rpx;
}

.nav-l1-item.active {
  background: rgba(22, 119, 255, 0.12);
  color: var(--c-primary);
}

.nav-l2 {
  white-space: nowrap;
  background: #fff;
  border-bottom: 1rpx solid rgba(0,0,0,.06);
  padding: 12rpx 20rpx;
}

.nav-l2-item {
  display: inline-block;
  padding: 10rpx 18rpx;
  margin-right: 10rpx;
  border-radius: 999rpx;
  background: #fafafa;
  color: #555;
  font-size: 26rpx;
}

.nav-l2-item.active {
  background: rgba(22, 119, 255, 0.12);
  color: var(--c-primary);
}

.nav-card {
  margin-bottom: 20rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 22rpx;
}

.nav-card-arrow {
  width: 16rpx;
  height: 16rpx;
  border-top: 3rpx solid rgba(0,0,0,.25);
  border-right: 3rpx solid rgba(0,0,0,.25);
  transform: rotate(45deg);
}

.nav-grid-layout {
  display: flex;
  height: 100vh;
}

.nav-sidebar {
  width: 200rpx;
  background: #f5f5f5;
  overflow-y: auto;
}

.nav-sidebar-item {
  padding: 32rpx 24rpx;
  font-size: 28rpx;
  color: #666;
  border-bottom: 1rpx solid #e0e0e0;
}

.nav-sidebar-item.active {
  background: #fff;
  color: var(--c-primary);
  border-left: 4rpx solid var(--c-primary);
}

.grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 20rpx;
}

.grid-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 18rpx;
}

.grid-icon {
  width: 96rpx;
  height: 96rpx;
  border-radius: 16rpx;
  margin-bottom: 14rpx;
  background: #f5f5f5;
}

.grid-title {
  font-size: 26rpx;
  color: #333;
  text-align: center;
  line-height: 1.3;
}

.aggregate-layout {
  display: flex;
  height: 100vh;
}

.sidebar {
  width: 200rpx;
  background: #f5f5f5;
  overflow-y: auto;
}

.sidebar-hint {
  padding: 20rpx 24rpx;
  font-size: 24rpx;
  color: var(--c-text-3);
  line-height: 1.4;
}

.sidebar-item {
  padding: 32rpx 24rpx;
  font-size: 28rpx;
  color: #666;
  border-bottom: 1rpx solid #e0e0e0;
}

.sidebar-item.active {
  background: #fff;
  color: var(--c-primary);
  border-left: 4rpx solid var(--c-primary);
}

.content {
  flex: 1;
  padding: 20rpx;
  overflow-y: auto;
}

.item-card {
  margin-bottom: 20rpx;
  display: flex;
}

.media-placeholder {
  margin-right: 20rpx;
}

.item-info {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.item-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 12rpx;
}

.item-desc {
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
}
