/* pages/order/order.wxss */

.container {
  background: #f5f5f5;
  min-height: 100vh;
}

/* Tab栏 */
.tabs {
  display: flex;
  background: #fff;
  border-bottom: 1rpx solid #f0f0f0;
}

.tab-item {
  flex: 1;
  text-align: center;
  padding: 18rpx 0;
  font-size: 28rpx;
  color: #666;
  position: relative;
  display: flex;
  align-items: center;
  justify-content: center;
}

.tab-item.active {
  color: var(--c-primary);
}

.tab-item.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 60rpx;
  height: 4rpx;
  background: var(--c-primary);
}

/* 类型筛选（解决“订单类型分类不生效/无入口”） */
.type-filters {
  display: flex;
  gap: 16rpx;
  padding: 16rpx 20rpx 10rpx;
  background: #fff;
  border-bottom: 1rpx solid #f0f0f0;
  flex-wrap: wrap;
}

.type-chip {
  padding: 12rpx 18rpx;
  border-radius: 999rpx;
  background: #f6f7fb;
  color: #333;
  font-size: 24rpx;
}

.type-chip.active {
  background: rgba(25, 137, 250, 0.12);
  color: var(--c-primary);
}

/* 订单列表 */
.orders-list {
  padding: 20rpx;
}

.order-card {
  margin-bottom: 20rpx;
}

.order-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.order-no {
  font-size: 28rpx;
  color: #333;
}

.order-status {
  font-size: 24rpx;
  color: #ff4444;
}

.order-type {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 12rpx;
}

.order-amount {
  display: flex;
  align-items: baseline;
  margin-bottom: 12rpx;
}

.amount-label {
  font-size: 28rpx;
  color: #666;
}

.amount-value {
  font-size: 32rpx;
  font-weight: bold;
  color: #ff4444;
  margin-left: 8rpx;
}

.order-time {
  font-size: 24rpx;
  color: #999;
}

.empty-state {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 60vh;
  font-size: 28rpx;
  color: #999;
}
