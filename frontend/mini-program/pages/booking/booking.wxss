/* pages/booking/booking.wxss */

.container {
  padding: 20rpx;
}

.create-btn {
  width: 100%;
  background: var(--c-primary);
  color: #fff;
  border: none;
  border-radius: var(--r-btn);
  padding: 24rpx;
  font-size: 32rpx;
  margin-bottom: 20rpx;
}

.filter-bar {
  display: flex;
  gap: 16rpx;
  flex-wrap: wrap;
  margin-bottom: 20rpx;
}

.filter-item {
  font-size: 26rpx;
  color: #666;
  background: rgba(148, 163, 184, 0.14);
  padding: 16rpx 24rpx;
  border-radius: 999rpx;
  min-height: 88rpx;
  display: flex;
  align-items: center;
}

.filter-item.active {
  color: #fff;
  background: var(--c-primary);
}

.bookings-list {
  margin-top: 20rpx;
}

.booking-card {
  margin-bottom: 20rpx;
}

.booking-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.venue-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.booking-status {
  font-size: 24rpx;
  padding: 4rpx 12rpx;
  border-radius: 4rpx;
}

.booking-status.confirmed {
  background: var(--c-primary-weak);
  color: var(--c-primary);
}

.booking-status.pending {
  background: #fff0f5;
  color: #ff69b4;
}

.booking-status.cancelled {
  background: #f5f5f5;
  color: #999;
}

.booking-info {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
  margin-bottom: 16rpx;
}

.booking-info text {
  font-size: 28rpx;
  color: #666;
}

.booking-actions {
  margin-top: 16rpx;
}

.empty-state {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 60vh;
  font-size: 28rpx;
  color: #999;
}
