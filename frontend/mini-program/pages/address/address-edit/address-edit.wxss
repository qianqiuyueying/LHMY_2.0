/* pages/address/address-edit/address-edit.wxss */
.container {
  padding: 20rpx;
  padding-bottom: 120rpx;
}

.form {
  padding: 16rpx;
}

.field {
  padding: 14rpx 0;
  border-bottom: 1rpx solid #f2f2f2;
}

.field:last-child {
  border-bottom: none;
}

.label {
  display: block;
  font-size: 24rpx;
  color: #666;
  margin-bottom: 8rpx;
}

.input {
  font-size: 30rpx;
  color: #222;
  padding: 8rpx 0;
}

.picker {
  font-size: 30rpx;
  color: #222;
  padding: 10rpx 0;
}

.row {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.actions {
  margin-top: 18rpx;
}


