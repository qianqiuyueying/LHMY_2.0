/* pages/ai-chat/ai-chat.wxss */

.container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background: var(--c-bg);
}

/* 免责声明 */
.disclaimer {
  margin: 20rpx 20rpx 12rpx;
  background: var(--c-primary-weak);
}

.disclaimer-content {
  flex: 1;
}

.disclaimer-title {
  font-size: 28rpx;
  font-weight: bold;
  color: var(--c-secondary);
  display: block;
  margin-bottom: 8rpx;
}

.disclaimer-text {
  font-size: 24rpx;
  color: var(--c-text-2);
}

.disclaimer-close {
  height: 72rpx;
  padding: 0 20rpx;
  font-size: 26rpx;
}

/* 对话区 */
.messages {
  flex: 1;
  padding: 20rpx;
  padding-bottom: calc(120rpx + env(safe-area-inset-bottom));
}

.message-item {
  margin-bottom: 24rpx;
  display: flex;
}

.message-item.user {
  justify-content: flex-end;
}

.message-item.ai {
  justify-content: flex-start;
}

.message-content {
  max-width: 70%;
  padding: 20rpx 24rpx;
  border-radius: var(--r-card);
  font-size: 28rpx;
  line-height: 1.6;
}

.message-item.user .message-content {
  background: var(--c-primary);
  color: #fff;
}

.message-item.ai .message-content {
  background: var(--c-surface);
  color: var(--c-text);
}

.message-content.is-loading {
  color: var(--c-text-2);
}

/* 输入区 */
.input-bar {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  display: flex;
  align-items: center;
  gap: 16rpx;
  padding: 16rpx 20rpx;
  padding-bottom: calc(16rpx + env(safe-area-inset-bottom));
  background: rgba(255, 255, 255, 0.96);
  border-top: 1rpx solid rgba(148, 163, 184, 0.25);
}

.input {
  flex: 1;
  min-height: 88rpx;
  background: rgba(148, 163, 184, 0.16);
  border-radius: var(--r-btn);
  padding: 0 24rpx;
  font-size: 28rpx;
  color: var(--c-text);
}

.send-btn {
  min-width: 140rpx;
  padding: 0 24rpx;
}
