/* pages/info/info.wxss */

.container {
  padding: 20rpx;
}

.block {
  margin-bottom: 40rpx;
}

.banner-swiper {
  width: 100%;
  height: 400rpx;
  margin-bottom: 20rpx;
}

.banner-image {
  width: 100%;
  height: 100%;
}

.rich-text {
  font-size: 28rpx;
  color: #333;
  line-height: 1.6;
}

/* CMS 富文本图片兜底：避免图片过大溢出/影响阅读
 * - rich-text 会把 <img> 渲染为 image 组件
 * - 同时兼容可能存在的 img/image 标签
 */
.rich-text img,
.rich-text image {
  max-width: 100% !important;
  height: auto !important;
  display: block;
}

.rich-text image {
  margin: 20rpx 0;
}

.links-list {
  background: var(--c-surface);
  border-radius: var(--r-card);
  overflow: hidden;
}

.link-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 32rpx 24rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.link-item:last-child {
  border-bottom: none;
}

.arrow {
  font-size: 32rpx;
  color: var(--c-text-3);
}

.cards-list {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
}

.card-item {
  display: flex;
  flex-direction: column;
}

.card-title {
  font-size: 28rpx;
  color: #333;
}
