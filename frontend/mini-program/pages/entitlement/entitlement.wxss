/* pages/entitlement/entitlement.wxss */

.container {
  background: #f5f5f5;
  min-height: 100vh;
}

/* 筛选栏 */
.filter-bar {
  background: #fff;
  padding: 20rpx;
  margin-bottom: 20rpx;
}

.filter-group {
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
}

.filter-group:last-child {
  margin-bottom: 0;
}

.filter-label {
  font-size: 28rpx;
  color: #333;
  margin-right: 16rpx;
}

.filter-item {
  font-size: 28rpx;
  color: #666;
  padding: 10rpx 20rpx;
  margin-right: 16rpx;
  background: rgba(148, 163, 184, 0.14);
  border-radius: 32rpx;
  min-height: 0;
  display: inline-flex;
  align-items: center;
  line-height: 1.2;
}

.filter-item.active {
  background: var(--c-primary);
  color: #fff;
}

/* 权益列表 */
.entitlements-list {
  padding: 20rpx;
}

.entitlement-card {
  margin-bottom: 20rpx;
}

.entitlement-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.entitlement-type {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.entitlement-status {
  font-size: 24rpx;
  color: #999;
  padding: 4rpx 12rpx;
  background: #f5f5f5;
  border-radius: 4rpx;
}

.entitlement-status.active {
  color: #3cc51f;
  background: #f0f9f0;
}

.entitlement-service {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 12rpx;
}

.entitlement-count,
.entitlement-validity {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 8rpx;
}

.entitlement-actions {
  margin-top: 16rpx;
}

.empty-state {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 60vh;
  font-size: 28rpx;
  color: #999;
}
