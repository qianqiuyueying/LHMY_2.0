/* pages/entitlement/entitlement-detail/entitlement-detail.wxss */

.container {
  padding: 20rpx;
  padding-bottom: 200rpx;
}

.info-row {
  display: flex;
  justify-content: space-between;
  padding: 24rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.info-row:last-child {
  border-bottom: none;
}

.label {
  font-size: 28rpx;
  color: #666;
}

.value {
  font-size: 28rpx;
  color: #333;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 24rpx;
}

.qr-code-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 40rpx 0;
}

.qr-code-image {
  width: 400rpx;
  height: 400rpx;
  background: rgba(148, 163, 184, 0.14);
  border-radius: var(--r-btn);
}

.qr-code-hint {
  margin-top: 20rpx;
  font-size: 24rpx;
  color: var(--c-text-2);
  text-align: center;
  line-height: 1.6;
}

.qr-retry-btn {
  margin-top: 16rpx;
  padding: 10rpx 22rpx;
  font-size: 24rpx;
  border-radius: var(--r-pill);
  border: 2rpx solid rgba(23, 182, 163, 0.35);
  color: var(--c-primary);
  background: transparent;
}

.qr-canvas {
  position: fixed;
  left: -9999px;
  top: -9999px;
  width: 400rpx;
  height: 400rpx;
}

.voucher-code-section {
  display: flex;
  align-items: center;
  padding: 24rpx;
  background: #f5f5f5;
  border-radius: 8rpx;
  margin-top: 24rpx;
}

.voucher-code-label {
  font-size: 28rpx;
  color: #666;
  margin-right: 12rpx;
}

.voucher-code-value {
  flex: 1;
  font-size: 28rpx;
  color: #333;
  font-family: monospace;
}

.copy-btn {
  padding: 8rpx 24rpx;
  background: var(--c-primary);
  color: #fff;
  border: none;
  border-radius: var(--r-btn);
  font-size: 24rpx;
}

