<!--pages/venue-detail/venue-detail.wxml-->
<view class="container" wx:if="{{!loading && venue}}">
  <!-- 场所头图 -->
  <view class="hero-wrap">
    <image wx:if="{{coverImageUrlAbs}}" class="hero-image" src="{{coverImageUrlAbs}}" mode="aspectFill"></image>
    <view wx:else class="media-placeholder media-placeholder--banner venue-hero">
      <text class="media-placeholder-text">{{venue.name}}</text>
    </view>
  </view>

  <!-- 场所信息 -->
  <view class="card">
    <text class="venue-name">{{venue.name}}</text>
    <view class="venue-region">
      <text>{{cityName || ''}}</text>
    </view>
    <view class="venue-description" wx:if="{{venue.description}}">
      <text>{{venue.description}}</text>
    </view>
    <view class="venue-contact">
      <text>联系电话：{{venue.contactPhone || '暂无'}}</text>
      <text>营业时间：{{venue.businessHours || '暂无'}}</text>
      <text>地址：{{venue.address || '暂无'}}</text>
    </view>
  </view>

  <!-- 商品/服务列表（该 Provider 全量） -->
  <view class="card">
    <view class="section-title">商品/服务列表</view>
    <view class="empty-state" wx:if="{{products.length === 0}}">
      <text>暂无可展示商品/服务</text>
    </view>
    <view 
      class="service-item"
      wx:for="{{products}}"
      wx:key="id"
      data-id="{{item.id}}"
      bindtap="onProductTap"
    >
      <view class="service-info">
        <text class="service-name">{{item.title}}</text>
        <text class="service-type">¥{{item.displayPrice || 0}}</text>
      </view>
      <text class="service-arrow">></text>
    </view>
  </view>
</view>
