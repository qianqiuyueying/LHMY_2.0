/* pages/venue-detail/venue-detail.wxss */

.container {
  padding-bottom: 20rpx;
}

.hero-wrap {
  margin: 20rpx;
}

.venue-hero {
  height: 520rpx;
}

.hero-image {
  width: 100%;
  height: 520rpx;
  border-radius: var(--r-card);
  display: block;
  background: #f1f5f9;
}

.venue-name {
  font-size: 36rpx;
  font-weight: bold;
  color: var(--c-text);
  display: block;
  margin-bottom: 16rpx;
}

.venue-region {
  font-size: 28rpx;
  color: var(--c-text-2);
  margin-bottom: 16rpx;
}

.venue-description {
  font-size: 28rpx;
  color: var(--c-text-2);
  line-height: 1.6;
  margin-bottom: 24rpx;
}

.venue-contact {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
  font-size: 28rpx;
  color: var(--c-text-2);
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 24rpx;
}

.empty-state {
  padding: 20rpx 0;
  font-size: 26rpx;
  color: var(--c-text-3);
}

.service-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 24rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.service-item:last-child {
  border-bottom: none;
}

.service-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.service-name {
  font-size: 28rpx;
  color: var(--c-text);
  font-weight: bold;
}

.service-type {
  font-size: 24rpx;
  color: var(--c-text-3);
}

.service-hint {
  font-size: 24rpx;
  color: var(--c-primary);
}

.service-arrow {
  font-size: 32rpx;
  color: var(--c-text-3);
}
