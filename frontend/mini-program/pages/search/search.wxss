/* pages/search/search.wxss */
.container {
  min-height: 100vh;
  background: #f5f5f5;
  padding: 20rpx;
}

.search-card {
  background: #fff;
  border-radius: 16rpx;
  padding: 20rpx;
}

.search-row {
  display: flex;
  gap: 12rpx;
  align-items: center;
}

.search-input {
  flex: 1;
  height: 72rpx;
  background: rgba(148, 163, 184, 0.14);
  border-radius: 36rpx;
  padding: 0 24rpx;
  font-size: 28rpx;
}

.hint {
  margin-top: 12rpx;
  font-size: 24rpx;
}

.history {
  margin-top: 20rpx;
  background: #fff;
  border-radius: 16rpx;
  padding: 20rpx;
}

.history-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.history-title {
  font-size: 28rpx;
  font-weight: 800;
  color: #111827;
}

.history-empty {
  margin-top: 16rpx;
  font-size: 26rpx;
}

.history-tags {
  margin-top: 16rpx;
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
}

.tag {
  padding: 12rpx 18rpx;
  border-radius: 999rpx;
  background: rgba(148, 163, 184, 0.14);
  color: #111827;
  font-size: 26rpx;
}


