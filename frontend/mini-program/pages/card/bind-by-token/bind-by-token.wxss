.page {
  padding: 16px;
}

.card {
  background: #fff;
  border-radius: 12px;
  padding: 16px;
  box-shadow: 0 6px 18px rgba(0, 0, 0, 0.06);
}

.title {
  font-size: 18px;
  font-weight: 700;
  color: #0f172a;
}

.desc {
  margin-top: 8px;
  font-size: 13px;
  color: rgba(2, 6, 23, 0.7);
  line-height: 1.6;
}

.actions {
  margin-top: 14px;
  display: grid;
  gap: 10px;
}

.btn {
  border-radius: 10px;
}

.primary {
  background: #14b8a6;
  color: #fff;
}

.meta {
  margin-top: 14px;
  font-size: 12px;
  color: rgba(2, 6, 23, 0.55);
  word-break: break-all;
}

.muted {
  color: rgba(2, 6, 23, 0.5);
}


