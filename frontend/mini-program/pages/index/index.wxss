/* pages/index/index.wxss */

.container {
  padding-bottom: 120rpx;
  background: #f5f5f5;
}

/* 顶部：定位和搜索 */
.header {
  display: flex;
  align-items: center;
  padding: 20rpx;
  background: #fff;
}

.search-box {
  flex: 1;
  height: 64rpx;
  background: #f5f5f5;
  border-radius: 32rpx;
  display: flex;
  align-items: center;
  padding: 0 20rpx;
}

.search-icon {
  width: 32rpx;
  height: 32rpx;
  margin-right: 12rpx;
}

.search-input {
  flex: 1;
  font-size: 28rpx;
  color: #333;
}

.search-placeholder {
  font-size: 28rpx;
  color: #999;
}

/* Banner轮播 */
.banner-swiper {
  width: 100%;
  height: 360rpx;
  margin-bottom: 20rpx;
  border-radius: 16rpx;
  overflow: hidden;
}

.banner-swiper swiper-item {
  height: 100%;
}

.banner-wrap {
  height: 100%;
}

.banner-image {
  width: 100%;
  height: 100%;
  display: block;
}

/* 快捷入口 */
.entries-section {
  background: #fff;
  padding: 18rpx 0 20rpx;
  margin-bottom: 20rpx;
}

.entries-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 20rpx 12rpx;
}

.entries-title {
  font-size: 30rpx;
  font-weight: 800;
  color: #111827;
}

.entries-more {
  font-size: 26rpx;
  color: var(--c-primary);
}

.entries-grid {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 20rpx;
  padding: 0 20rpx;
}

.entry-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.entry-icon {
  width: 80rpx;
  height: 80rpx;
  margin-bottom: 12rpx;
  border-radius: 16rpx;
  overflow: hidden;
  background: rgba(15, 23, 42, 0.04);
  padding: 10rpx;
  box-sizing: border-box;
}

.entry-icon-img {
  width: 100%;
  height: 100%;
  display: block;
}

.entry-icon-placeholder {
  width: 100%;
  height: 100%;
}

.entry-item--more .entry-icon--more {
  opacity: 0.7;
}

.entry-name {
  font-size: 24rpx;
  color: #333;
}

.entries-fallback {
  margin: 20rpx;
}

.entries-fallback-title {
  font-size: 28rpx;
  font-weight: 700;
  color: var(--c-text);
  margin-bottom: 12rpx;
}

.entries-fallback-actions {
  display: flex;
  justify-content: flex-start;
}

/* 推荐商品 */
.section {
  margin-bottom: 20rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 800;
  padding: 20rpx;
  background: #fff;
  border-bottom: 1rpx solid #f0f0f0;
}

.products-scroll {
  white-space: nowrap;
  background: #fff;
  padding: 20rpx 0;
}

.product-card {
  display: inline-block;
  width: 280rpx;
  margin-left: 20rpx;
  vertical-align: top;
}

.product-card:last-child {
  margin-right: 20rpx;
}

.product-image {
  width: 100%;
  height: 280rpx;
  border-radius: 8rpx;
}

.product-info {
  padding: 12rpx 0;
}

.product-name {
  font-size: 28rpx;
  color: #333;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

.product-price {
  margin-top: 8rpx;
  color: var(--c-accent);
}

.product-tags {
  margin-top: 10rpx;
  display: flex;
  flex-wrap: wrap;
  gap: 10rpx;
}

.tag-pill {
  font-size: 22rpx;
  color: var(--c-primary);
  background: rgba(25, 137, 250, 0.12);
  padding: 6rpx 12rpx;
  border-radius: 999rpx;
}

.price-symbol {
  font-size: 24rpx;
}

.price-value {
  font-size: 32rpx;
  font-weight: bold;
}

/* 推荐场所 */
.venues-list {
  background: #fff;
}

.venue-card {
  display: flex;
  padding: 20rpx;
}

.venue-image {
  width: 160rpx;
  height: 160rpx;
  border-radius: 8rpx;
  margin-right: 20rpx;
}

.venue-info {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.venue-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
}

.venue-region {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 12rpx;
}

.venue-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 8rpx;
}

/* 统一使用 tag-pill（与商品一致） */

/* AI旋钮 */
.ai-button {
  position: fixed;
  right: 40rpx;
  bottom: 200rpx;
  width: 100rpx;
  height: 100rpx;
  background:
    radial-gradient(circle at 30% 30%, rgba(23, 182, 163, 0.45), rgba(23, 182, 163, 0) 60%),
    linear-gradient(135deg, rgba(23, 182, 163, 1) 0%, rgba(11, 31, 51, 0.92) 100%);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 10rpx 24rpx rgba(23, 182, 163, 0.22);
  z-index: 999;
  opacity: 0;
  transform: scale(0);
  transition: all 0.3s;
}

.ai-button.show {
  opacity: 1;
  transform: scale(1);
}

.ai-icon {
  width: 48rpx;
  height: 48rpx;
}
