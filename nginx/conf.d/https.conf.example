##
## Production HTTPS example (single-host)
##
## Usage:
## - Copy this file to `nginx/conf.d/https.conf` (keep `default.conf` for http->https redirect).
## - Mount certs into `/etc/nginx/certs` (see docker-compose.yml volume `./nginx/certs:/etc/nginx/certs:ro`).
## - Replace `server_name` and certificate file names.
##

server {
  listen 80;
  server_name example.com www.example.com;

  # ACME challenge (optional, if you run certbot on host and share webroot)
  # location ^~ /.well-known/acme-challenge/ {
  #   root /var/www/certbot;
  # }

  return 301 https://$host$request_uri;
}

server {
  listen 443 ssl http2;
  server_name example.com www.example.com;

  ssl_certificate     /etc/nginx/certs/fullchain.pem;
  ssl_certificate_key /etc/nginx/certs/privkey.pem;

  # Basic hardening (adjust as needed)
  ssl_session_timeout 1d;
  ssl_session_cache shared:SSL:10m;
  ssl_session_tickets off;

  # Modern TLS
  ssl_protocols TLSv1.2 TLSv1.3;

  # HSTS (enable only after confirming https works)
  # add_header Strict-Transport-Security "max-age=31536000; includeSubDomains; preload" always;

  # API reverse proxy
  location /api/ {
    proxy_pass http://backend:8000;
    proxy_set_header Host $host;
    proxy_set_header X-Real-IP $remote_addr;
    proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    proxy_set_header X-Forwarded-Proto $scheme;
    proxy_set_header X-Request-Id $http_x_request_id;
  }

  # Website static (SPA)
  location / {
    root /usr/share/nginx/html;
    try_files $uri $uri/ /index.html;
  }
}


